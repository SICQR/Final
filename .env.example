# Copy this file to .env.local for development or set these in Vercel for production

# Sanity CMS Configuration (REQUIRED)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_PROJECT_ID=your_sanity_project_id_here
SANITY_DATASET=production
SANITY_API_WRITE_TOKEN=your_sanity_write_token_here
SANITY_READ_TOKEN=your_sanity_read_token_here

# Admin Authentication (REQUIRED for /admin route)
ADMIN_USER=admin
ADMIN_PASS=your_secure_password_here

# Site Configuration (REQUIRED)
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app

# Shopify Integration (OPTIONAL)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_token_here

# Telegram Bot (OPTIONAL - for affiliate system)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Revalidation (OPTIONAL - for webhooks)
REVALIDATION_SECRET=your_revalidation_secret_here